{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/dts",
    "declarationMap": true,
    "declaration": true,
    "jsx": "react",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/cohort/*": ["src/cohort/*"],
      "@/common/*": ["src/common/*"],
      "@/layout/*": ["src/layout/*"],
      "@/modals/*": ["src/modals/*"]
    },

    "skipLibCheck": true
  }
}
